  <body>
    <tu>
      <tuv xml:lang="fin">
        <seg>Koulutus- ja oppimateriaalitoimisto</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Skuvlen- ja oahppamateriáladoaimmahat</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Koulutussihteeri</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Doaimmahaga fásta bargit</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Irmeli Moilanen</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Skuvlenčálli</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- toimiston esimies,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- doaimmahaga hoavda</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- koulutuksen lainsäädännön, hallinnon, rahoituskehityksen, arvioinnin, opetussuunnitelmanormien ja saamelaisopetuksen kehityksen seuranta,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahpahusa láhkaásaheami, hálddahusa, ruhtadanovdáneami, árvvoštallama, oahppaplánanorpmaid ja sámeoahpahusa ovdáneami čuovvun</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- koulutus- ja oppimateriaalilautakunnan sihteeri ja esittelijä (koulutuspoliittiset ja yleiset koulutusasiat),</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- skuvlen- ja oahppamateriálalávdegotti čálli ja áššemeannudeaddji (skuvlenpolitihkalaš áššit ja almmolaš skuvlenáššit)</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- saamelaisten koulutusasiain yhteistyöelimen sihteeri ja esittelijä,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- sámiid skuvlenáššiid ovttasbargoorgána čálli ja áššemeannudeaddji</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- yhteydenpito saamelaisopetusta järjestäviin kuntiin, valtion opetushallintoon ja pohjoismaisiin sisarelimiin,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oktavuođadoallan sámeoahpahusa lágideaddji gielddaide, stáhta oahpahushálddahussii ja davviriikkalaš guoibmeorgánaidda</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- kansainvälisen kehityksen seuranta.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- riikkaidgaskasaš ovdáneami čuovvun</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oppimateriaalisihteeri</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Oahppamateriálačálli</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- koulutus- ja oppimateriaalilautakunnan sihteeri ja esittelijä (oppimateriaaliasiat),</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- skuvlen- ja oahppamateriálalávdegotti čálli ja áššemeannudeaddji (oahppamateriálaáššit)</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalityön suunnittelu, ohjaus, valvonta ja toimitustyö,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriálabarggu plánen, rávven, gohcin ja doaimmaheapmi</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalin valmistukseen liittyvä yhteydenpito kouluihin ja opetuksen hallintoon,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriála válmmašteapmái gullevaš oktavuođaadoallan skuvllaide ja oahpahusa hálddahussii</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- pohjoismainen yhteistyö.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- davviriikkalaš ovttasbargu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalin suunnittelu-, toimitus- ja tiedotustyö,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Oahppamateriálaplánejeaddji</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- Saamelaisnuorten taidetapahtuman valmistelu, tiedotus, raportointi ja varainkäyttö,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriála plánen-, doaimmahan- ja dieđihanbargu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalin valmistukseen liittyvä yhteydenpito kouluihin ja pohjoismainen yhteistyö,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- sámenuoraid dáiddadáhpáhusa válmmaštallan, diehtojuohkin, raporteren ja ruđaidgeavaheapmi</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalinäyttelyn ja – varaston ylläpito.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriála válmmašteapmái gullevaš oktavuođadoallan skuvllaide ja davviriikkalaš ovttasbargu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Toimistosihteeri</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Doaimmahatčálli</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- arkiston ja kirjaston ylläpito,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- arkiivva ja girjerádjosa bajásdoallan,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalivarojen käytön seuranta,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriálaruđaid geavaheami čuovvun,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- oppimateriaalin tiedotustyö, varastointi ja jakelu,</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- oahppamateriálaid birra dieđiheapmi, vurken ja juohkin,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>- kokousten käytännön järjestelyt.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>- čoahkkimiid geavatlaš ordnen</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oppimateriaalin projektityöntekijät</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Oahppamateriála prošeaktabargit</seg>
      </tuv>
    </tu>
