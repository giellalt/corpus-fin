      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Laajennettu haku</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Gii iešguđet lea?</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusapu Yleinen edunvalvonta</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mii vuoigatvuođaveahkkái gullá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Syyttäjälaitos Tuomioistuimet</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mo vuoigatvuođaveahkki ohccojuvvo</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Yleiset tuomioistuimet Käräjäoikeudet</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Maid vuoigatvuođaveahkki ohccái máksá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Korkein oikeus Hallintotuomioistuimet</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mo vuoigatvuođaveahkkemearrádusas sáhttá váidit</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Hallinto-oikeudet Korkein hallinto-oikeus</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Rihkkosa oaffar sáhttá oažžut veahki ja doarjjaolbmo</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Erityistuomioistuimet</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Dieđut vuoigatvuođaveahkis</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Markkinaoikeus</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Gii iešguđet lea?</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Mihin asioihin oikeusapua saa</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Maid áššiide vuoigatvuođaveahki oažžu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Mitä oikeusapuun kuuluu</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mii vuoigatvuođaveahkkái gullá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Miten oikeusapua haetaan</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mo vuoigatvuođaveahkki ohccojuvvo</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Millä tuloilla oikeusapua myönnetään ja mitkä menot huomioidaan</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Maid boađuiguin vuoigatvuođaveahkki mieđihuvvo</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Mitä oikeusapu hakijalle maksaa</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Maid vuoigatvuođaveahkki ohccái máksá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Miten oikeusapupäätöksestä voi valittaa</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mo vuoigatvuođaveahkkemearrádusas sáhttá váidit</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Rikoksesta epäilty voi saada puolustajan</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Rihkkosis eahpiduvvon sáhttá oažžut bealušteaddji</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Rikoksen uhri voi saada avustajan ja tukihenkilön</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Rihkkosa oaffar sáhttá oažžut veahki ja doarjjaolbmo</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Mitä oikeusapu hakijalle maksaa</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Maid vuoigatvuođaveahkki ohccái máksá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusavun saajalta perittävät kulut muodostuvat omavastuusta ja oikeusapumaksusta.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahki oažžus berrojuvvon golut čohkiidit iežasvásttus ja vuoigatvuođaveahkkemávssus.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Omavastuu</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Iežasvástu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusavun saaja maksaa oikeusavustajan palkkiosta tietyn prosenttiosuuden (perusomavastuu).</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahki oažžu máksá vuoigatvuođaveahki bálkkás dihto proseantaoasi (vuođđoiežasvástu).</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Se määräytyy hakijan kuukausittaisten käyttövarojen perusteella seuraavasti:</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Dat mearrašuvvá ohcci mánnosaš geavahanváriid vuođul čuovvovaččat:</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Yksinäinen henkilö</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Oktonas olmmoš</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Käyttövarat enintään</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Geavahanvárit eanemustá / Vuođđoiežasvástu 600 euro 0 % 800 euro 20 % 900 euro 30 % 1 050 euro 40 % 1 150 euro 55 % 1 300 euro 75 %</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Kun käyttövarat ovat yli 1 300 euroa, oikeusapua ei myönnetä.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Go geavahanvárit leat badjel 1 300 euro, vuoigatvuođaveahkki ii mieđihuvvo.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Puolisot yhteensä</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Beallálaččat oktiibuot</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Käyttövarat enintään Perusomavastuu</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Geavahanvárit eanemustá / Vuođđoiežasvástu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Kun käyttövarat ovat yli 2 400 euroa, oikeusapua ei myönnetä.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Go geavahanvárit leat badjel 2 400 euro, vuoigatvuođaveahkki ii mieđihuvvo.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusavun saajan varallisuus kasvattaa hänen kuluvastuutaan, jos talletuksia, asunto-osakkeita, kiinteistöjä tai muuta omaisuutta on yli 5 000 euron arvosta (lisäomavastuu).</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahki oažžu várit lasihit su goluid ovddasvástádusa, juos seasttut, visteossosat, giddodagat dahje eará opmodat lea badjel 5 000 euro árvvus (lassiiežasvástu).</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Varoista vähennetään velat.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Váriin geahpeduvvojit vealggit.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Vakituista asuntoa, tavanomaista vapaa-ajan asuntoa ja autoa tai näiden hankkimiseksi otettuja velkoja ei kuitenkaan oteta huomioon.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Fásta vistti, dábálaš asttuáigge vistti ja biilla dahje dáid skáhppoma várás váldojuvvon vealggit eai goittotge váldojuvvo vuhtii.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Perunkirjoitusasiassa vainajan varat otetaan huomioon täysimääräisesti, ja ne lisätään lisäomavastuun määrään (korotettu lisäomavastuu).</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Árbečálihanáššis oamehasa várit vuhtiiváldojit dievasmearálaččat, ja dat lasihuvvojit lassiiežasvásttu mearrái (bajiduvvon lassiiežasvástu).</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Lisäomavastuun määrässä otetaan huomioon myös omaisuus, jonka hakija saa esimerkiksi perinnönjaossa tai osituksessa.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Lassiiežasvásttu mearis vuhtiiváldo maiddái opmodat, man ohcci oažžu ovdamearkan árbejuogus dahje juogadeamis.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Omavastuun määrä vahvistetaan asian tultua hoidetuksi.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Iežasvástu mearri nannejuvvo ášši boađidettiin dikšojuvvot.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Omavastuusta voidaan periä ennakkoa.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Iežasvásttus sáhttá bearrat ovdamávssu.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusavun saajan on ilmoitettava oikeusaputoimistolle muutoksista tuloissaan, menoissaan ja varallisuudessaan.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahki oažžu galgá almmuhit vuoigatvuođaveahkkedoaimmahahkii nuppástusain guoskkadin boađuid, goluid ja váriid.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Jos oikeusavun saajan taloudelliset olosuhteet muuttuvat, oikeusaputoimisto voi muuttaa oikeusapupäätöstä.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Juos vuoigatvuođaveahki oažžu ekonomalaš dilli nuppástuvvá, vuoigatvuođaveahkkedoaimmahat sáhttá rievdadit vuoigatvuođaveahkkemearrádusa.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Päätöstä muutettaessa määrätään, sovelletaanko sitä takautuvasti.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Mearrádusa rievdadettiin mearriduvvo, heivehuvvogo dat máhccevaččat.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusapumaksu</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahkkemáksu</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Oikeusapumaksu on 70 euroa ja se peritään kaikilta muilta hakijoilta paitsi niiltä, jotka saavat oikeusapua korvauksetta eli ilman omavastuuta.</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Vuoigatvuođaveahkkemáksu lea 70 euro ja dat berrojuvvo buot ohcciin earret dain, geat ožžot vuoigatvuođaveahki nuvttá, nuppiid sániiguin almmá iežasvástu haga.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Sivun alkuun</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Siiddu álgui</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Tulosta</seg>
      </tuv>
      <tuv xml:lang="sme">
        <seg>Čálit</seg>
      </tuv>
    </tu>
