  <body>
    <tu>
      <tuv xml:lang="fin">
        <seg>Opetus- ja kulttuuriministeriö ja Saamelaiskäräjät kutsuvat saamelaisopetuksen pohjoismaiseen foorumiin</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Máttááttâs- já kulttuurministeriö já Sämitigge puávdejeh sämimáttááttâs tave-eennâmlii foorumân</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Suomen opetus- ja kulttuuriministeriö ja Saamelaiskäräjät kutsuvat saamelaisopetuksen pohjoismaiseen foorumiin Saamelaiskulttuurikeskus Sajokseen Inariin 1.-2.12.2021 .</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Suomâ máttááttâs- já kulttuurministeriö já Sämitigge puávdejeh sämimáttááttâs tave-eennâmlii foorumân Säämi kulttuurkuávdáš Sajosân Anarân 1.-2.12.2021 .</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Saamelaisopetuksen pohjoismaisen yhteistyön kehittäminen on yksi Suomen Pohjoismaiden ministerineuvoston puheenjohtajakaudelle asettamista tavoitteista.</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Sämimáttááttâs tave-eennâmlii oovtâstpargo ovdedem lii ohtâ ulme, maid Suomâ lii asâttâm jieijâs Tave-enâmij ministerrääđi saavâjođetteijeepajan.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Foorumi on Suomen puheenjohtajakauden tapahtuma.</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Foorum lii Suomâ saavâjođetteijeepaje tábáhtus.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Foorumin tavoitteina ovat</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Foorum ulmen láá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>kokonaiskuvan luominen saamelaisopetuksen tilanteesta Suomessa,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>oleskove hammim sämimáttááttâs tiileest Suomâst, Ruotâst já Taažâst,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Ruotsissa ja Norjassa,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämimáttááttâs raajijd rastaldittee oovtâstpargo nanodem,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamelaisopetuksen rajat ylittävän yhteistyön vahvistaminen,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>uđđâlágánij oovtâstpargovuovij kavnâm já</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>uudenlaisten yhteistyömuotojen luominen ja</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>pisováá savâstâllâmohtâvuođâ finnim staatâi máttááttâsvirgeomâhái, škovlim uárnejeijei já sämisiärváduvâi kooskâ.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>jatkuvan keskusteluyhteyden aikaansaaminen maiden opetusviranomaisten, koulutuksen järjestäjien ja saamelaisyhteisöjen välille.</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Foorum teeman láá</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Foorumin teemoina ovat</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>máttááttâs sämikielâ eenikielâ / vuossâmuu kielâ ovdánem máhđulâžžân tahhen Ruotâst, Taažâst já Suomâst,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>opetus saamen äidinkielen / ensimmäisen kielen kehittymisen mahdollistajana Ruotsissa, Norjassa ja Suomessa,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämikielâi revitalisaatio kiäinuh máttááttâsâst, šiev toimâvyevih jieškote-uv staatâst,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamen kielten revitalisaation väylät opetuksessa, hyvät käytännöt eri maissa,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>máttááttâs noonâ já hiäjus maalih sämikielâi puátteevuođâ uáinust,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>opetuksen vahvat ja heikot mallit saamen kielten tulevaisuuden näkökulmasta,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämikielâi káidusmáttááttâs jieškote-uv staatâst,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamen kielten etäyhteyksiä hyödyntävä opetus eri maissa,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämikielâlij máttáátteijei škovlim já tohálâšvuotâvátámâšah,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamenkielisten opettajien koulutus ja kelpoisuusvaatimukset,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämikielâlii oppâmateriaaloovtâstpargo hináh já</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamenkielisen oppimateriaaliyhteistyön edellytykset ja</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämmiláid kyeskee tiätu puohháid ohtsii máttááttâsâst.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamelaisia koskeva tieto kaikille yhteisessä opetuksessa.</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>Čuosâttâhjuávkku Suomâ, Ruotâ já Taažâ</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>Kohderyhmä Suomen, Ruotsin ja Norjan</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>máttááttâsministeriöh, sämitigeh já máttááttâsvirgeomâhááh,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>opetusministeriöt, saamelaiskäräjät ja opetusviranomaiset,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>máttááttâs já škovlim uárnejeijeeh,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>opetuksen ja koulutuksen järjestäjät,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>škovlimpooliitliih merideijeeh,</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>koulutuspoliittiset päättäjät,</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>sämimáttááttâs já -škovlim totkeeh sehe</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>saamelaisopetuksen ja -koulutuksen tutkijat sekä</seg>
      </tuv>
      <tuv xml:lang="smn">
        <seg>iärráseh, kiäh láá perustum.</seg>
      </tuv>
    </tu>
    <tu>
      <tuv xml:lang="fin">
        <seg>muut asiasta kiinnostuneet.</seg>
      </tuv>
